<Window x:Class="LoaderGame.Windows.General.HowPlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoaderGame.Windows.General"
        mc:Ignorable="d"
        Title="Как играть?" Height="600" Width="800" WindowStartupLocation="CenterOwner" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/HowPlay.png" Stretch="Fill" Grid.ColumnSpan="4" Grid.RowSpan="4"/>
        <Image Source="/Resources/ArrowBack.png" Grid.Column="0" Grid.Row="3" Width="150" MouseDown="Image_MouseDown"/>
    </Grid>
</Window>
